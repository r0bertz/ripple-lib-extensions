{
  "compilerOptions": {
    "pretty": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": false,
    "resolveJsonModule": true,
    "preserveSymlinks": true,

    "outDir": "./dist/npm",
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*.ts"
  ]
}
